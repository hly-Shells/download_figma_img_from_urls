#!/bin/bash
# figmad - Figma 图片下载命令行工具
# 支持：单张/批量 URL 下载、空间/文件全量下载（--space）
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# -S 为 --space 简写，统一转为 --space 传给 download_figma_image.py
ARGS=()
for arg in "$@"; do
    if [ "$arg" = "-S" ]; then
        ARGS+=("--space")
    else
        ARGS+=("$arg")
    fi
done

exec python3 "$SCRIPT_DIR/download_figma_image.py" "${ARGS[@]}"
